import math

AB = input("Длина первого катета: ")
AC = input("Длина второго катета: ")

AB = float(AB)
AC = float(AC)

BC = math.sqrt(AB ** 2 + AC ** 2)

def perimetr(AB,AC):  # создали первую функцию perimetr, в нее передают два числа a и b
  res = (AB+AC)*2
  return res         # возвращает число
                     # первая функция закончилась

def area(AB, AC):      # создали другую функцию area, в нее передают два числа a и b
  res = AB*AC
  return res

p = perimetr(AB, AC)             # результат функции perimetr поместили в переменную p
print("Периметр = %d" % (p))  # напечатали p (Периметр = 16)
s = area(AB, AC)                 # результат функции area поместили в переменную s
print("Площадь = %d" % (s))   # напечатали s (Площадь = 15)

                              # можно сразу печатать результат функции
print("Периметр = %d" % (perimetr(AB, AC)))
print("Площадь = %d" % (area(AB, AC)))
